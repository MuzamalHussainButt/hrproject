<p id="notice"><%= notice %></p>

<div class="container">
  <center>
    <div id="title">
      <br><b><header> HR Management System </header><b>
    </div>
  </center>
</div>

<div id="back">
    <%= link_to "Back", home_index_path(), class: 'back_button'%>
</div>



<div class="content">
  <center>
      <%= form_tag('/interviews', method:'get') do %>
          <div>
            <%= text_field_tag(:name,"",class: "input form-control",placeholder:"Interviewee Name") %>
          </div>

          <div>
            <%= submit_tag("Get",class:"get_button") %>
          </div>
      <%end%>
  </center>

</div>








<% if @interviews.present? %>
<br>
<center>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Name</th>
        <th>Employee ID</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @interviews.each do |interview| %>
        <tr>
          <td><%= interview.title %></td>
          <td><%= interview.description %></td>
          <td><%= interview.name %></td>
          <td><%= interview.employee_detail_id %></td>
          <td><%= link_to 'Show', interview %></td>
          <td><%= link_to 'Edit', edit_interview_path(interview) %></td>
          <td><%= link_to 'Destroy', interview, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<center>
<%end%>
<br>
<center>
<%= link_to 'Add interviewee detail', new_interview_path %>
</center>